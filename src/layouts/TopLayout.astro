---
import "destyle.css"
import "../assets/css/common.css"
import Head from "../components/Head.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
const { title } = Astro.props as { title: string };
---

<html lang="ja">
<head>
  <Head title={title} isTop={true} />
</head>
<body>
  <div class="wrapper">
    <Header />
    <main class="main">
      <div class="hero">
        <h1 class="hero__title page-title">{title}</h1>
      </div>
      <section class="section">
        <slot />
      </section>
    </main>
    <Footer />
  </div>
</body>
</html>
<style>
  .wrapper {
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-columns: 100%;
    min-height: 100vh;
  }

  .page-title {
    color: var(--color-headline);
    font-size: 1.5rem;
    font-weight: 600;
  }

  .hero {
    padding: 2rem;
    text-align: center
  }

  .section {
    padding: 2rem
  }
</style>