---
import "destyle.css";
import "../assets/css/prismjs.css";
import "../assets/css/common.css";
const url = Astro.url;
import site from "../data/site.json";
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title, canvas } = Astro.props as { title: string; canvas?: { id?: string, width?: number, height?: number } };
const c = { id: "webgl", width: 800, height: 800, ...canvas }
---

<html lang="ja">
<head>
  <Head title={`${title} | ${site.meta.title}`} />
</head>
<body>
  <div class="wrapper">
    <Header />
    <main class="main">
      <div class="hero">
        <h1 class="hero__title page-title">{title}</h1>
      </div>
      <div id="section" class="section">
        <div class="draw">
          <canvas id={c.id} class="canvas" width={c.width} height={c.height}></canvas>
        </div>
        <div class="code-area">
          <slot />
        </div>
      </div>
    </main>
    <Footer />
  </div>
</body>
</html>
<style>
  .wrapper {
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-columns: 100%;
    min-height: 100vh;
  }
  .page-title {
    color: var(--color-headline);
    font-size: 1.5rem;
    font-weight: 600;
  }
  .hero {
    padding: 2rem;
    text-align: center
  }
  .hero__title {
    max-width: 50rem;
    margin: 0 auto;
    font-size: 1.5rem;
    word-break: break-all;
  }
  .section {
    margin-top: 2rem;
    margin-bottom: 2rem;
    padding-left: 2rem;
    padding-right: 2rem;
  }
  .draw {
    position: relative;
    width: 800px;
    height: auto;
    max-width: 100%;
    margin: 0 auto;
    aspect-ratio: 1/1;
  }
  .canvas {
    position: absolute;
    width: 100% !important;
    height: 100% !important;
    background-color: #000;
    background: rgb(204, 204, 204);
    background-image:
      linear-gradient(45deg, rgb(255, 255, 255) 25%, transparent 0),
      linear-gradient(45deg, transparent 75%, rgb(255, 255, 255) 0),
      linear-gradient(45deg, rgb(255, 255, 255) 25%, transparent 0),
      linear-gradient(45deg, transparent 75%, rgb(255, 255, 255) 0);
    background-size: 2rem 2rem;
    background-position: 0 0, 1rem 1rem, 1rem 1rem, 2rem 2rem;
  }
  .code-area {
    max-width: 800px;
    margin: 5rem auto 0;
  }
  @media screen and (max-width: 767px) {
    .hero {
      padding-left: 1rem;
      padding-right: 1rem;
    }
    .section {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>